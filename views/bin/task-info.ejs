<html>

    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
        <title>GrapeOS</title>
        <link rel="stylesheet" href="/assets/bootstrap/css/bootstrap.min.css">
        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Fira+Code:400,500,700">
        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto+Mono:300,500,700">
        <link rel="stylesheet" href="/assets/font-awesome/css/font-awesome.css">
        <link rel="stylesheet" href="/assets/css/bootstrap.css">
        <link rel="stylesheet" href="/assets/css/styles.css">
    </head>
    
<body>
    <div class="card min-vh-100">
        <div class="card-header">
            <h5 class="mb-0 text-dark fw-bold"><%=task.name%></h5>
        </div>
        <div class="card-body">
            <form>
                <div class="row">
                    <div class="col">
                        <input class="form-control my-2" type="text" id="exp" placeholder="Expression" readonly="" value="<%=task.exp%>">
                        <input class="form-control my-2" type="text" id="cmd" placeholder="Command" readonly="" value="<%=task.cmd%>">
                        <div>
                            <h6>Data</h6><textarea class="form-control" id="data" readonly="" rows="5"><%=JSON.stringify(task.data)%></textarea>
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <div class="d-flex justify-content-between"><a class="btn btn-secondary btn-lg m-2 text-light" role="button" href="/bin/tasks/view"><i class="fa fa-chevron-left"></i></a><a class="btn btn-danger btn-lg m-2 text-light" role="button" href="/bin/tasks/delete/<%=task._id%>"><i class="fa fa-trash-o"></i></a></div>
    </div>
    <script src="/assets/bootstrap/js/bootstrap.min.js"></script>
</body>

</html>