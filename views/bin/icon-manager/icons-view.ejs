<!DOCTYPE html>
<html lang="en">

    <%-include("../../partials/head")%>

<body>
    <div class="card textlight bg-dark text-light min-vh-100">
        <div class="card-header">
            <h5 class="mb-0">Icons</h5>
        </div>
        <div class="card-body p-1">
            <div class="container-fluid">
                <div class="row">
                    <div class="col d-flex align-items-center flex-wrap">
                        <% icons.forEach(icon => {
                            if(icon.data.iconType === "icon") {
                            %>
                            <div class="d-inline-flex flex-column align-items-center p-2" style="cursor: pointer;"><i class="<%=icon.data.iconTypeData%>" style="font-size: 3rem"></i><span class="text-nowrap"><%=icon.name%></span></div>
                            <%
                            }
                            if(icon.data.iconType === "img") {%>
                                <div class="d-inline-flex flex-column justify-content-center align-items-center p-2"style="cursor: pointer;"><img class="img-fluid" width="50" src="<%=icon.data.iconTypeData%>"><span class="text-nowrap"><%=icon.name%></span></div>
                            <%}
                        });%>
                        
                        
                    </div>
                </div>
            </div>
            <div class="d-flex flex-row justify-content-center"><a class="btn btn-info btn-lg m-2" id="btn-add-icon" href="/bin/icons/add" type="submit"><i class="fa fa-plus"></i></a></div>
        </div>
    </div>
    <script src="/assets/bootstrap/js/bootstrap.min.js"></script>
</body>

</html>