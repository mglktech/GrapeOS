<!DOCTYPE html>
<html lang="en">

<%-include("../../partials/head")%>


<body>
    <div class="card bg-dark min-vh-100">
        <div class="card-header">
            <h5 class="text-secondary mb-0">FiveM Servers</h5>
        </div>
        <div class="card-body">
            <% servers.forEach(server => {%>
            <div class="d-flex flex-row justify-content-between py-1" id="server">
                <div class="d-flex align-items-center">
                    <div class="d-flex flex-column">
                        <span class="text-light fw-bold"><%=server.Data.vars.get("sv_projectName")%></span>
                        <span class="text-light"><%=server._id%></span>
                    </div>
                </div>
                <a class="btn btn-info btn-lg justify-content-center" href="/bin/fiveM/server/get/<%=server.id%>/html"
                    type="button">
                    <i class="fa fa-info-circle px-3"></i>
                </a>
            </div>
            <%})%>
        </div>
        <hr>
        <div class="d-flex justify-content-end p-3"><a class="btn btn-primary btn-lg" href="/bin/fiveM/server/add"><i
                    class="fa fa-plus"></i></a></div>
    </div>

    <script src="/assets/bootstrap/js/bootstrap.min.js"></script>

</body>

</html>